<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="box box-default">
      <div class="box-header with-border">
        <h3 class="box-title">
          <i class="fa fa-gears"></i> <%= t(@matchday.code, scope: 'matchday') %>
        </h3>
      </div>
      <div class="box-body">
        <h4><%= t('.settings') %></h4>
        <p><%= t('.settings_description') %></p>
        <%= form_for ['admin', @matchday], method: :put, html: { class: 'form-horizontal' } do |f| %>
          <div class="form-group">
            <%= f.label :started_at, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :started_at, value: @matchday.started_at&.strftime('%d/%m/%Y'), class: "form-control", data: { provide: "datepicker" } %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :ended_at, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :ended_at, value: @matchday.ended_at&.strftime('%d/%m/%Y'), class: "form-control", data: { provide: "datepicker" } %>
            </div>
          </div>

          <div class="text-right">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

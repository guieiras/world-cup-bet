<% @matchdays.each do |matchday| %>
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title"><%= t(matchday.code, scope: 'matchday') %></h3>
        </div>
        <div class="box-body">
          <%= render partial: 'admin/matches/form', \
                     locals: { matchday: matchday, matches: matchday.matches.order(:datetime) } %>
        </div>
      </div>
    </div>
  </div>
<% end %>

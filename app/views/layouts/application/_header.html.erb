<header class="main-header">
  <!-- Logo -->
  <a href="#" class="logo">
    <span class="logo-lg"><%= t('application.name_html') %></span>
  </a>
  <nav class="navbar navbar-static-top">
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button"></a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-user"></i>
            <span class="hidden-xs"><%= current_user.name %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="box box-primary">
              <div class="box-body">
                <p class="text-center">
                  <%= current_user.name %>
                  <span class="text-center text-muted">
                    <br/>
                    <%= current_user.username %>
                  </span>
                </p>
                <p class="text-center"><%= current_user.email %></p>
                <%= button_to sign_out_path, method: :delete, class: "btn btn-default btn-flat btn-xs btn-block text-center" do %>
                  <%= t('layouts.application.sign_out') %>
                <% end %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>

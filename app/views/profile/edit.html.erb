<%= form_for @user, url: { controller: "profile", action: "update" }, html: { class: "form form-horizontal" } do |f| %>
  <div class="box">
    <div class="box-body">
      <div class="form-group <%= "has-error" if @user.errors[:name].present? %>">
        <%= f.label :name, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :email, class: "form-control", disabled: true %>
        </div>
      </div>
    </div>
    <div class="box-footer">
      <%= f.submit class: "btn btn-info pull-right" %>
    </div>
  </div>
<% end %>